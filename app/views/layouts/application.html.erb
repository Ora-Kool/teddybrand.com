<!DOCTYPE html>
<html>
  <head>
    <title>teddybrand.com</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'TEDDY',  root_path, class: 'navbar-brand'%>
        </div>
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Shop", brands_path%></li>
          <li>
            <%= link_to "About", about_path%>
          </li>
          <li>
            <%= link_to "FAQS", faqs_path%>
          </li>
          <li>
            <%= link_to "Contact", contact_path%>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        <% if false %>
           <li>
            <%= link_to "Sign Out"%>
           </li>
         <%else%>
              <li><%= link_to "Sign In" %></li>
               <li><%= link_to "Sign Up"%></li>
          <%end%>
        
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Language <span class="caret"></span>
            </a>

            <ul class="dropdown-menu">
              <li>
                <%= link_to 'English' %>
              </li>
              <li>
                <%= link_to 'French' %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
<% if yield(:home_page) == 'home' %>
	<style type="text/css">
		body {
			background-color: #fafafa;
			padding: 0 0 0 0;
			margin: 31px 0 0 0;
		}
	</style>
		<div id="slider">
			<%= render 'slider' %>
		</div>


			<%= yield %>


		<%= render 'layouts/shared/footer' %>



<%else %>


	<div class="container">
	<p id="notice"><%= notice %> </p>

	<h1><%= yield(:page_header) %></h1>

	       <%= yield %>
	</div>




<%= render 'layouts/shared/footer' %>


<%end%>

 
  </body>
  </body>
</html>
